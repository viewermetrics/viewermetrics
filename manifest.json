{
  "manifest_version": 3,
  "name": "Viewer Metrics",
  "version": "0.9.93",
  "description": "Track and analyze stream viewers with bot detection",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "*://gql.twitch.tv/*",
    "*://*.twitch.tv/*"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.twitch.tv/*"
      ],
      "js": [
        "content/core/settings-manager.js",
        "content/core/error-handler.js",
        "content/ui/html-templates.js",
        "content/core/content.js"
      ],
      "css": [
        "ui/styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "pages/tracking.html",
        "pages/tracking.js",
        "pages/tracking.css",
        "pages/viewer.html",
        "pages/viewer.js",
        "pages/viewer.css",
        "ui/*.css",
        "lib/*.js",
        "icons/*.png"
      ],
      "matches": [
        "*://*.twitch.tv/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}